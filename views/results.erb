<div class="row">
  <div class="col-xs-12"><h2>Job listings for &quot<%= search_terms %>&quot in Denver</h2></div>
</div>
<div class="row">
  <div class="col-xs-12">
    <table id="job-listings" class="table table-condensed table-striped">
      <thead>
      <tr>
        <th>Job title</th>
        <th>Company</th>
        <th>Posted on</th>
      </tr>

      <% job_listings.each do |job| %>
          <tr>
            <td><a href="<%= job.link %>"><%= job.title %></a></td>
            <td><%= job.company_name %></td>
            <td><%= job.posted_on %></td>
            <td>
              <form action="/save-job" method="post" class="form-inline">
                <div class="form-group">
                  <input type="hidden" name="job_data" value='<%= job.to_a %>'>
                  <button type="submit" class="btn btn-default btn-primary">Save</button>
                </div>
              </form>
            </td>
          </tr>
      <% end %>
      </thead>
    </table>
  </div>
</div>